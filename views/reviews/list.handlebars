<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Travel Reviews</h1>
    <a href="/reviews/new" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg transition duration-200">
      Agregar Nueva Reseña
    </a>
  </div>

  {{#if reviews.length}}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {{#each reviews}}
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-200">
          <img src="{{imageUrl}}" alt="{{destination}}" class="w-full h-48 object-cover">
          
          <div class="p-6">
            <h2 class="text-xl font-semibold text-gray-800 mb-2">{{destination}}</h2>
            <h3 class="text-lg text-gray-600 mb-3">{{title}}</h3>
            
            <div class="flex items-center mb-4">
              <span class="text-yellow-400 text-lg">★★★★★</span>
              <span class="ml-2 text-gray-600">({{rating}}/5)</span>
            </div>
            
            <p class="text-gray-700 mb-4 line-clamp-3">{{comment}}</p>
            
            <a href="/reviews/{{id}}" class="inline-block bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded transition duration-200">
              Ver Detalle
            </a>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="text-center py-12">
      <h2 class="text-2xl text-gray-600 mb-4">No hay reseñas disponibles</h2>
      <p class="text-gray-500 mb-6">¡Sé el primero en compartir tu experiencia de viaje!</p>
      <a href="/reviews/new" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg transition duration-200">
        Crear Primera Reseña
      </a>
    </div>
  {{/if}}
</div>

<style>
.line-clamp-3 {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}
</style>