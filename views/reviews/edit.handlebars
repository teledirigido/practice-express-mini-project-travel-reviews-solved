<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-800 mb-8">Editar Reseña</h1>
    
    <div class="bg-white rounded-lg shadow-lg p-8">
      <div class="mb-6">
        <h3 class="text-lg font-medium text-gray-700 mb-2">Imagen actual:</h3>
        <img src="{{review.imageUrl}}" alt="{{review.destination}}" class="w-full h-48 object-cover rounded-md">
      </div>

      <form method="POST" action="/reviews/{{review.id}}" enctype="multipart/form-data">
        <div class="mb-6">
          <label for="destination" class="block text-sm font-medium text-gray-700 mb-2">
            Destino *
          </label>
          <input 
            type="text" 
            id="destination" 
            name="destination" 
            required 
            value="{{review.destination}}"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
        </div>

        <div class="mb-6">
          <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
            Título de la reseña *
          </label>
          <input 
            type="text" 
            id="title" 
            name="title" 
            required 
            value="{{review.title}}"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
        </div>

        <div class="mb-6">
          <label for="comment" class="block text-sm font-medium text-gray-700 mb-2">
            Comentario *
          </label>
          <textarea 
            id="comment" 
            name="comment" 
            required 
            rows="5"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          >{{review.comment}}</textarea>
        </div>

        <div class="mb-6">
          <label for="rating" class="block text-sm font-medium text-gray-700 mb-2">
            Valoración *
          </label>
          <select 
            id="rating" 
            name="rating" 
            required 
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="1">1 estrella</option>
            <option value="2">2 estrellas</option>
            <option value="3">3 estrellas</option>
            <option value="4">4 estrellas</option>
            <option value="5">5 estrellas</option>
          </select>
          <script>
            document.getElementById('rating').value = '{{review.rating}}';
          </script>
        </div>

        <div class="mb-8">
          <label for="image" class="block text-sm font-medium text-gray-700 mb-2">
            Nueva imagen (opcional)
          </label>
          <input 
            type="file" 
            id="image" 
            name="image" 
            accept="image/*"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
          <p class="text-sm text-gray-500 mt-1">Deja este campo vacío para mantener la imagen actual</p>
        </div>

        <div class="flex gap-4">
          <button 
            type="submit" 
            class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg transition duration-200"
          >
            Actualizar Reseña
          </button>
          
          <a 
            href="/reviews/{{review.id}}" 
            class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg transition duration-200 inline-block"
          >
            Cancelar
          </a>
        </div>
      </form>
    </div>
  </div>
</div>